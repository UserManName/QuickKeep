<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorShadow</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:background">@android:color/transparent</item> //NO UNDERBAR
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <!--<note name="android:height">28dp</note> //COMMON HEIGHT-->
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@android:color/transparent</item> //NO UNDERBAR
        <item name="android:maxLines">1</item>
        <!--<note name="android:height">28dp</note> //COMMON HEIGHT-->
    </style>

    <style name="HeadlineEditTextStyle">
        <item name="android:background">@android:color/transparent</item> //NO UNDERBAR
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <!--<note name="android:height">28dp</note> //COMMON HEIGHT-->
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
